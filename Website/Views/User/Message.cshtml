@{
    ViewData["Title"] = "Message";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Website.Models.User

<h3 class= "text-center">
    @ViewBag.Status
</h3>
@if(ViewBag.Status == "Success!")
    {
        <h4 >Hello! @ViewBag.Name </h4>
        <p>Click  <a class="btn btn-primary" role = "button" asp-action="Home" > Here </a>    to view other Users </p> 
    }
    else
    {
        <p>Click  <a class="btn btn-primary" role = "button" asp-action="LogIn" > Here </a>    to retry </p> 

    }